{
  "name": "oas-zod-validator",
  "version": "1.0.0",
  "description": "OpenAPI Specification validator built with Zod",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "oas-validate": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist/cli.{js,d.ts}",
    "dist/index.{js,d.ts}",
    "dist/schemas/*.{js,d.ts}",
    "dist/utils/*.{js,d.ts}",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*",
    "!dist/**/tests/**",
    "README.md"
  ],
  "scripts": {
    "build": "tsc && chmod +x dist/cli.js",
    "prepublishOnly": "npm run build",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "lint": "eslint . --ext .ts",
    "test:clean": "rimraf coverage && NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "clean": "rimraf coverage && rimraf dist"
  },
  "keywords": [
    "openapi",
    "swagger",
    "validation",
    "zod",
    "typescript",
    "cli"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^13.1.0",
    "inquirer": "^9.2.16",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "ora": "^8.0.1",
    "typescript": "^5.7.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/chalk": "^0.4.31",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash": "^4.17.15",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.13.1",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2"
  }
}
